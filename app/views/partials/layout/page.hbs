<div id="page" class="drawer-layout drawer-slide-right-large">
  {{! DO THE NAVIGATION }}
  <div id="sidebar">
    <button id="close-button" class="close-button" aria-label="Close menu" type="button" data-drawer-close>
      <span aria-hidden="true">Ã—</span>
    </button>
    {{#if logo}}
      <div id="logo">
        <img src="images/{{logo}}" title="{{info.title}}" />
      </div>
    {{/if}}

    {{>layout/nav/main}}
  </div>
  {{! DO THE CONTENT }}
  <div id="docs" class="row collapse expanded drawer" data-drawer>
    {{! The Hamburger for when Nav column has been collapsed }}
    <button class="floating-menu-icon" type="button" data-drawer-slide="right">
      <span class="hamburger"></span>
    </button>
    {{! Draws the rightmost dark column where examples usually go }}
    <div class="example-box doc-content"></div>
    {{>layout/content/main}}
  </div>
</div>
